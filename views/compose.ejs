<%- include('./partials/header') -%>

    <h1>Compose</h1>
    <form method="post" action="/compose">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" class="form-control" id="title" name="titlecontent" >
          
        </div>
        <div class="form-group">
          <label for="post">Post</label>
          <textarea type="text" class="form-control" id="post" placeholder="Password" name="postcontent" rows="6"></textarea>
        </div>
        
        <button type="submit" name="button" class="btn btn-primary">Publish</button>
      </form>

    <%- include('./partials/footer') -%>